{
    "name": "zzlx/apis",
    "description": "A backend api service for frontend ui application.",
    "version": "1.0.0",
    "type": "libraries",
    "homepage": "https://www.zzlx.org/",
    "lisence": "MIT",
    "config": {
        "vendor-dir": "vendor",
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "serve": "php -S 0.0.0.0:8080 -t public/"
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    },
    "autoload": {
        "psr-4": { 
            "Zzlx\\App\\": "src/zzlx-app/src",
            "Zzlx\\Db\\": "src/zzlx-db/src",
            "Zzlx\\Util\\": "src/zzlx-util/src",
            "Zzlx\\Wechat\\": "src/zzlx-wechat/src"
		    }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0",
        "http-interop/http-middleware": "^0.4.1",
        "zendframework/zend-authentication": "^2.5",
        "zendframework/zend-barcode": "^2.6",
        "zendframework/zend-cache": "^2.7",
        "zendframework/zend-captcha": "^2.7",
        "zendframework/zend-config": "^3.1",
        "zendframework/zend-config-aggregator": "^1.0",
        "zendframework/zend-crypt": "^3.2",
        "zendframework/zend-db": "^2.8",
        "zendframework/zend-dom": "^2.6",
        "zendframework/zend-expressive": "^2.0",
        "zendframework/zend-expressive-fastroute": "^2.1",
        "zendframework/zend-expressive-helpers": "^4.2",
        "zendframework/zend-expressive-platesrenderer": "^1.3",
        "zendframework/zend-expressive-template": "^1.0",
        "zendframework/zend-feed": "^2.8",
        "zendframework/zend-file": "^2.7",
        "zendframework/zend-filter": "^2.7",
        "zendframework/zend-form": "^2.10",
        "zendframework/zend-http": "^2.6",
        "zendframework/zend-i18n": "^2.7",
        "zendframework/zend-json": "^3.0",
        "zendframework/zend-permissions-acl": "^2.6",
        "zendframework/zend-session": "^2.8",
        "zendframework/zend-stratigility": "^2.0",
        "zendframework/zend-xml2json": "^3.0",
        "zendframework/zendxml": "^1.0"
    },
    "conflict": {
    },
    "require-dev": {
        "filp/whoops": "^2.1",
        "phpunit/phpunit": "^6.0.7 || ^5.7.14",
        "zendframework/zend-component-installer": "^1.0",
        "zendframework/zend-console": "^2.6",
        "zendframework/zend-debug": "^2.5",
        "zendframework/zend-expressive-tooling": "^0.4.4",
        "zfcampus/zf-development-mode": "^3.1"
    }
}
